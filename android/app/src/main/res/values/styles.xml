<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- <item name="android:spinnerStyle">@style/Spinner</item> -->
      <!-- <item name="android:listViewStyle">@style/listView</item> -->
      <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
      <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="listView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">8px</item>
    </style>

    <style name="Spinner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#242526</item>
    </style>

    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="android:fontFamily">sans-serif-light</item>
      <item name="android:textSize">15dp</item>
      <item name="android:background">#242526</item>
    </style>

    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#242526</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mydivider</item>
    </style>

</resources>
